<Window x:Class="HelbreathLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Helbreath Launcher" Height="500" Width="850"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/HelbreathLauncher;component/server_ico.ico">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Viewbox Stretch="Uniform">
        <Border CornerRadius="10" BorderBrush="#333333" BorderThickness="1" Width="850" Height="500">
            <Border.Background>
                <ImageBrush ImageSource="/Logo_Server.png" Stretch="Fill"/>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#202020" MouseLeftButtonDown="Window_MouseDown">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <Image Source="pack://application:,,,/HelbreathLauncher;component/server_ico.ico" Width="16" Height="16" Margin="0,0,10,0"/>
                    <TextBlock Text="HELBREATH APOCALYPSE - LAUNCHER" Foreground="#888" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,5,0">
                    <Button Content="_" Width="35" Click="BtnMinimize_Click" Background="Transparent" Foreground="#AAA" BorderThickness="0" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                    <Button Content="X" Width="35" Click="BtnClose_Click" Background="Transparent" Foreground="#AAA" BorderThickness="0" FontSize="14" FontWeight="Bold" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0" Panel.ZIndex="10">
                <TextBlock Text="IDIOMA / LANGUAGE" Foreground="White" FontSize="9" FontWeight="Bold" Margin="0,0,0,2"/>
                <ComboBox x:Name="CmbLang" Width="55" Height="20" FontSize="10" SelectedIndex="0" SelectionChanged="CmbLang_SelectionChanged" Background="#252525" Foreground="Black">
                    <ComboBoxItem Content="ES"/>
                    <ComboBoxItem Content="EN"/>
                </ComboBox>
            </StackPanel>

            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- News Button (Top Right) -->
                <Button x:Name="BtnNews" Content="NOTICIAS" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" 
                        Width="80" Height="25" Click="BtnNews_Click" Margin="0,0,0,0"
                        FontSize="11" FontWeight="Bold" Cursor="Hand" Background="#333" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,20,0">
                    <Label x:Name="LabelServer" Content="SELECCIONAR SERVIDOR" Foreground="White" FontSize="11" FontWeight="Bold" Margin="0,0,0,0"/>
                    <ComboBox x:Name="CmbServer" Width="180" Height="25" Margin="0,0,0,0" SelectedIndex="0" SelectionChanged="CmbServer_SelectionChanged" Background="#252525" Foreground="Black" FontSize="12" VerticalContentAlignment="Center" Padding="5,0">
                        <ComboBoxItem Content="Release Server (Público)"/>
                        <ComboBoxItem Content="Test Server (Local)"/>
                    </ComboBox>
                </StackPanel>
 
                <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    
                    <Button x:Name="BtnRegister" Content="CREAR CUENTA" Width="111" Height="30" Click="BtnRegister_Click"
                            FontSize="12" FontWeight="SemiBold"
                            Margin="0,0,0,10" Cursor="Hand" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="white"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333"/>
                                        <Setter Property="Foreground" Value="#636060"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="BtnPlay" Content="JUGAR AHORA" Height="60" Click="BtnPlay_Click" 
                            FontSize="22" FontWeight="Bold" 
                            Margin="0,0,0,0" Cursor="Hand" BorderThickness="0" Width="167">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF8C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
 
            <Border Grid.Row="2" Background="#111" CornerRadius="0,0,10,10" Padding="15,0">
                <Grid VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Ellipse x:Name="StatusLight" Width="10" Height="10" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TxtStatus" Text="Conectando..." Foreground="#AAA" FontSize="11" VerticalAlignment="Center"/>
                        
                        <TextBlock Text=" | " Foreground="#444" Margin="10,0"/>

                        <TextBlock x:Name="TxtVersion" Text="Versión: -" Foreground="#00FF00" FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <TextBlock x:Name="TxtUpdateStatus" Text="" Foreground="#00BFFF" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <ProgressBar x:Name="ProgBarUpdate" Width="200" Height="8" HorizontalAlignment="Right" Visibility="Hidden" Background="#222" BorderBrush="#333"/>
                </Grid>
            </Border>

            <Grid x:Name="OverlayRegister" Visibility="Collapsed" Background="#D9000000" Grid.RowSpan="3">
                <Border Width="320" Height="420" Background="#1E1E1E" CornerRadius="8" BorderBrush="#444" BorderThickness="1">
                    <StackPanel Margin="25">
                        <TextBlock Text="REGISTRO DE CUENTA" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                        <TextBlock Text="Usuario (ID)" Foreground="#888" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtRegUser" MaxLength="10" Height="30" Background="#252525" Foreground="White" BorderBrush="#444" VerticalContentAlignment="Center" Padding="5,0"/>

                        <TextBlock Text="Contraseña" Foreground="#888" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="TxtRegPass" MaxLength="10" Height="30" Background="#252525" Foreground="White" BorderBrush="#444" VerticalContentAlignment="Center" Padding="5,0"/>

                        <TextBlock Text="Email" Foreground="#888" Margin="0,15,0,5"/>
                        <TextBox x:Name="TxtRegEmail" Height="30" Background="#252525" Foreground="White" BorderBrush="#444" VerticalContentAlignment="Center" Padding="5,0" Margin="0,0,0,25"/>

                        <Button x:Name="BtnSubmitRegister" Content="REGISTRARSE" Click="BtnSubmitRegister_Click" Height="40" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="CANCELAR" Click="BtnCloseRegister_Click" Height="30" Background="Transparent" Foreground="#666" BorderThickness="0" Cursor="Hand"/>

                        <TextBlock x:Name="TxtRegStatus" Text="" Foreground="#E5C07B" TextWrapping="Wrap" Margin="0,15,0,0" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- News Overlay -->
            <Grid x:Name="OverlayNews" Visibility="Collapsed" Background="#D9000000" Grid.RowSpan="3">
                <Border Width="500" Height="400" Background="#1E1E1E" CornerRadius="8" BorderBrush="#444" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock x:Name="LabelNewsOverlay" Text="NOTICIAS" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                        
                        <Border Grid.Row="1" Background="#111" Margin="20,0,20,0" CornerRadius="5" Padding="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="TxtNewsContent" Text="Cargando..." Foreground="#DDD" FontSize="12" TextWrapping="Wrap" FontFamily="Consolas, Segoe UI"/>
                            </ScrollViewer>
                        </Border>

                        <Button Content="CERRAR / CLOSE" Click="BtnCloseNews_Click" Grid.Row="2" Width="120" Height="30" Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand" VerticalAlignment="Center">
                             <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

        </Grid>
    </Border>
    </Viewbox>
</Window>